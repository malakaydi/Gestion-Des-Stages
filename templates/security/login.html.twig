{% extends 'admin/base_admin.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

<div class="auth-wrapper d-flex no-block justify-content-center align-items-center position-relative">
            <div class="auth-box row">
                <div class="col-lg-7 col-md-5 modal-bg-img">
                </div>
                <div class="col-lg-5 col-md-7 bg-white">
                    <div class="p-3">
                        <h2 class="mt-3 text-center">Bienvenue</h2>
                        <p class="text-center">Entrez votre login et votre mot de passe pour acc√©der au panneau d'administration .</p>
                          {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}
                            {% if app.user %}
                                <div class="mb-3">
                                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                                </div>
                            {% endif %}
                        <form class="mt-4" method="post">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label class="text-dark" for="uname">Login</label>
                                         <input type="text" placeholder="Login" value="{{ last_username }}" name="y" id="inputY" class="form-control" autocomplete="username" required autofocus>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label class="text-dark" for="pwd">Mot de passe</label>
                                        <input type="password" placeholder="Mot de pass" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                                    </div>
                                </div>
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                  {#
                                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                                    See https://symfony.com/doc/current/security/remember_me.html

                                    <div class="checkbox mb-3">
                                        <label>
                                            <input type="checkbox" name="_remember_me"> Remember me
                                        </label>
                                    </div>
                                #}
                                <div class="col-lg-12 text-center">
                                    <button type="submit" class="btn btn-block btn-dark">Connexion</button>
                                </div>
                               
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>



{% endblock %}
