        <label class="col-md-2 text-right">{{ form_label(form.photo,'Photo')}}</label>
        <div class="col-md-7">
            <div class="form-group">
                <div class="custom-file">
                    {{ form_widget(form.photo, {'attr': {'class': 'form-control custom-file-input upload_photo'}}) }}
                    <label class="custom-file-label" for="membres_photo">Choisir un fichier</label>

                </div>
               
            </div>
             {% if photo is defined and photo is not empty %}
                   {% if photo['file_exists'] == true %}
                       <div class="form-group">
                       	<img src="{{asset(photo['url_image'])}}" id="upload_image" class="img-thumbnail" />
                       </div>
                   {% endif %}
             {% else %}
             <div class="form-group">
                <img src="" id="upload_image" class="img-thumbnail" style="display:none" />
              </div>
             {% endif %}
            <div class="modal fade" id="modal_crop" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
			  	<div class="modal-dialog modal-lg" role="document">
			    	<div class="modal-content">
			      		<div class="modal-header">
			        		<h5 class="modal-title" id="modalLabel">Crop Image Before Upload</h5>
			        		<button type="button" class="close" data-dismiss="modal" aria-label="Close">
			          			<span aria-hidden="true">×</span>
			        		</button>
			      		</div>
			      		<div class="modal-body">
			        		<div class="img-container">
			            		<div class="row">
			                		<div class="col-md-8">
			                    		<img src="" id="sample_image" />
			                		</div>
			                		<div class="col-md-4">
			                    		<div class="preview"></div>
			                		</div>
			            		</div>
			        		</div>
			      		</div>
			      		<div class="modal-footer">
			        		<button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
			        		<button type="button" class="btn btn-primary" id="crop">Crop</button>
			      		</div>
			    	</div>
			  	</div>
			</div>	  
        </div>
