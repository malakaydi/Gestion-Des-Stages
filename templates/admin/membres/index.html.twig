{% extends 'admin/base_admin.html.twig' %}

{% block title %}
    {% if typeMembre == 1 %}
        Stagiaires
    {% elseif typeMembre == 2 %}
        Entreprises
    {% else %}
        Écoles / universités
    {% endif %}
{% endblock %}
{% block stylesheets %}
    {{parent()}}
    <link href="{{asset('assets/extra-libs/datatables.net-bs4/css/dataTables.bootstrap4.css')}}"  rel="stylesheet">
    
{% endblock %}
{% block javascripts %}
    {{parent()}}

    <script src="{{asset('assets/extra-libs/datatables.net/js/jquery.dataTables.min.js')}}"></script>
    <script type="text/javascript">
      $( document ).ready(function() {

          if( {{typeMembre}} == 1) 
          {
              var thNoOrder = 7;
          }
          else{
              var thNoOrder = 8;
          }
        $('#table_membres').DataTable({
            language: {
            url: "{{asset('assets/extra-libs/datatables.net/french.json')}}"
           },
            columnDefs: [{
                targets: [0,thNoOrder],
                orderable: false  
            }],
        });
        $('button.update-status').click(function(){
            var item = $(this);
            var id_membre = $(this).attr('id');
            if($(item).find('i.fa').hasClass('fa-times'))
            {
                var newStatus = 1;
            }
            else{
                var newStatus = 0;
            }
            $.ajax({
                url: "{{path('membres_updateStatus')}}",
                type: "POST",
                data: {
                    idMembre:id_membre,
                    status: newStatus
                    },
                    success:function(response){ 
                    $('<div class="alert alert-ajax alert-success alert-dismissible bg-success text-white border-0 fade"><button type="button" class="close" data-dismiss="alert" aria-label="Close"> <span aria-hidden="true">×</span></button>'+ response.data +'</div>').insertBefore('.page-wrapper');
                    setTimeout(function() {
                    $('.alert.alert-ajax').addClass('show');
                    }, 100);
                    setTimeout(function() {
                        $('.alert.alert-ajax').hide();
                     }, 1200);
                    if(newStatus == 1)
                    {
                        $(item).find('i.fa').removeClass('fa-times');
                        $(item).find('i.fa').addClass('fa-check');
                    }
                    else{
                        $(item).find('i.fa').removeClass('fa-check');
                        $(item).find('i.fa').addClass('fa-times');
                    }
                }
            });    
        });
        $('#selectAll').click(function() {
            $('.checkb').prop("checked", true);
            setNbrOfChecked();
        });
         $('#deselectAll').click(function() {
            $('.checkb').prop("checked", false);
            setNbrOfChecked();
        });
        $('.checkb').change(function() {
            setNbrOfChecked()
        });
        $('#activateBatch').click(function() {
            var list = getSelectedElements();
            location.href = '{{path('membres_activeSelected')}}?listSelected='+list+'&status=1&type={{typeMembre}}';
        })
        $('#deactivateBatch').click(function() {
           var list = getSelectedElements();
            location.href = '{{path('membres_activeSelected')}}?listSelected='+list+'&status=0&type={{typeMembre}}';
        })
      });
      // confirm delete
        function confirm_delete(item_href,item_title){
            $('#modal_delete span#titre-departement').text(item_title);
            $('#delete-item').attr('href',item_href);
            $('#modal_delete').modal('show');
        }
         // Actions groupées
         function setNbrOfChecked() {
            var count = $(".checkb:checked").length;
             if (count == 0) {
                $('#NbrSelected').text("")
                $("#deleteBatch").prop("disabled", true);
                $("#activateBatch").prop("disabled", true);
                $("#deactivateBatch").prop("disabled", true);
            } else {
                $('#NbrSelected').text('( ' + count + ' )')
                $("#deleteBatch").prop("disabled", false);
                $("#activateBatch").prop("disabled", false);
                $("#deactivateBatch").prop("disabled", false);
            }
        }
        // confirm delete all selected
        function confirm_delete_selected(){
            $('#modal_delete span#titre-departement').text('les membres sélectionnées');
            var list = getSelectedElements();
            $('#delete-item').attr('href','{{path('membres_deleteSelected')}}?listSelected='+list+'&type={{typeMembre}}');
            $('#modal_delete').modal('show');
        }
        function getSelectedElements() {
            var selected = [];
            $.each($(".checkb:checked"), function() {
                selected.push($(this).attr('data-id'));
            });
            return selected;
        }
    </script>
   
{% endblock %}

{% block body %}
 <div class="page-wrapper">
    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-7 align-self-center">
                <h3 class="page-title text-truncate text-dark font-weight-medium mb-1">
                    {% if typeMembre == 1 %}
                        Liste des stagiaires
                    {% elseif typeMembre == 2 %}
                        Liste des entreprises
                    {% else %}
                        Liste des écoles / universités
                    {% endif %}
                
                </h3>
            </div>
        </div>
    </div>
    <div class="container-fluid">
                <!-- ============================================================== -->
                <!-- Start Page Content -->
                <!-- ============================================================== -->
                <!-- basic table -->
                 {% for message in app.flashes('success') %}
                    <div class="alert alert-success alert-dismissible bg-success text-white border-0 fade show" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                        {{ message }}
                    </div>
                {% endfor %}
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                             <div class="btn-group dropdown">
                                <button class="btn btn-outline-info dropdown-toggle" type="button" style="width: auto" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Actions groupées
                                    <span id="NbrSelected"></span>
                                </button>
                               <div class="dropdown-menu">
                                    <button class="dropdown-item" id="selectAll">
                                        <i class="far fa-check-square"></i> Tous sélectionner
                                    </button>
                                    <button class="dropdown-item" id="deselectAll">
                                        <i class="far fa-square"></i> Tous désélectionner
                                    </button>
                                    <div class="dropdown-divider"></div>
                                     <button class="dropdown-item" id="activateBatch" disabled>
                                        <i class="fa fa-toggle-on "></i> Activer la sélection
                                    </button>
                                    <button class="dropdown-item" id="deactivateBatch" disabled>
                                        <i class="fa fa-toggle-off"></i> Désactiver la sélection
                                    </button>
                                    <div class="dropdown-divider"></div>
                                    <button class="dropdown-item" id="deleteBatch" disabled onclick="confirm_delete_selected();">
                                        <i class="fa fa-trash"></i>  Supprimer la sélection
                                    </button>
                                </div>
                            </div>
                             <a class="mb-3 pull-right btn waves-effect waves-light btn-rounded btn-primary" href="{{ path('membres_new') }}?type={{typeMembre}}">
                                {% if typeMembre == 1 %}
                                    Ajouter un stagiaire
                                {% elseif typeMembre == 2 %}
                                   Ajouter une entreprises
                                {% else %}
                                    Ajouter une école / université
                                {% endif %}
                             </a>
                           
                                <div class="table-responsive">
                                    <table id="table_membres" class="table table-striped table-bordered no-wrap">
                                        <thead>
                                           <tr>
                                                <th width="50"></th>
                                                <th>Id</th>
                                                <th>Nom</th>
                                                <th>Prenom</th>
                                                <th>Email</th>
                                                 {% if typeMembre == 2 %}
                                                <th> Nom du groupe</th>
                                                {% elseif typeMembre == 3 %}
                                                 <th> Nom de l'ecole </th>
                                                {% endif %}
                                                <th>Status</th>
                                                <th>Date d'inscrit</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for membre in membres %}
                                                <tr>
                                                    <td>
                                                        <input type="checkbox" class="form-control checkb" id="checkbox_{{ membre.id }}" data-id="{{ membre.id }}">
                                                    </td>
                                                    <td>{{ membre.id }}</td>
                                                    <td>{{ membre.nom }}</td>
                                                    <td>{{ membre.prenom }}</td>
                                                    <td>{{ membre.email }}</td>
                                                    {% if typeMembre == 2 or typeMembre == 3 %}
                                                        <td>{{ membre.titre }}</td>
                                                    {% endif %}
                                                    <td class="text-center" width="10%">
                                                        <button type="button" class="update-status" id="{{ membre.id }}">
                                                            {% if membre.status == 1 %}
                                                                <i class="fa fa-check"></i>
                                                            {% else %}
                                                                <i class="fa fa-times"></i>
                                                            {% endif %}
                                                        </button>
                                                    </td>
                                                 
                                                    <td>{{ membre.dateAdd ? membre.dateAdd|date('d-m-Y') : '' }}</td>
                                                    <td width="10%">
                                                    <div class="btn-group">
                                                        <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                            Actions
                                                        </button>
                                                        <div class="dropdown-menu dropdown-menu-left" x-placement="bottom-start">
                                                            <button class="dropdown-item" type="button">
                                                            <a href="{{ path('membres_edit', {'id': membre.id}) }}">Modifier</a>
                                                            </button>
                                                             <button type="button" class="dropdown-item" onclick="confirm_delete('{{ path('membres_delete', {'id': membre.id}) }}','{{ membre.Email }}');"
                                                              >Supprimer</button>
                                                           
                                                        </div>
                                                    </div>
                                                    </td>
                                                </tr>
                                            {% else %}
                                                <tr>
                                                    <td colspan="9">Aucune donction trouvée</td>
                                                </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

 <div id="modal_delete" class="modal fade" tabindex="-1" role="dialog"
    aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"
                    aria-hidden="true">×</button>
            </div>
            <div class="modal-body">
                <p class="text-center">Etes-vous sûr de vouloir supprimer <span id="titre-departement"></span> ?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light"
                    data-dismiss="modal">Annuler</button>
                <a class="btn btn-primary" id="delete-item">Supprimer</a>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>
   
{% endblock %}
